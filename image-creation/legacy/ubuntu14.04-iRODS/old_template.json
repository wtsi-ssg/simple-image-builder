
{
  "min_packer_version": "0.9.0",
  "variables": {
    "packer_username": "ubuntu",
    "packer_password": "ubuntu",
    "vmware_host": "{{ env `VMWARE_BUILD_HOST` }}",
    "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.4-server-amd64.iso",
    "iso_checksum": "2ac1f3e0de626e54d05065d6f549fa3a",
    "openstack_imgid": "{{ env `OS_BASE_IMAGE`}}",
    "openstack_sg": "{{ env `OS_SECURITY_GRP`}}",
    "image_name": "{{ env `IMAGE_NAME`}}",
    "null_user": "jjntoo",
    "null_key": "~/.ssh/test.pem",
    "boot_cmd": "<esc><esc><enter><wait> /install/vmlinuz debian-installer=en_GB auto locale=en_GB kbd-chooser/method=gb fb=false debconf/frontend=noninteractive keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=GB keyboard-configuration/variant=GB console-setup/ask_detect=false  initrd=/install/initrd.gz netcfg/get_domain=vm  noapic "

  },

  "builders": [
      {
      "type": "vmware-iso",
      "output_directory": "{{ user `image_name` }}",
      "vmx_template_path": "packer.vmx",
      "guest_os_type": "ubuntu-64",
      "remote_type": "esx5",
      "remote_username": "vmbuildadmin",
      "remote_host": "{{ user `vmware_host` }}",
      "remote_private_key_file": "vmware_private_key.pem",
      "remote_datastore": "wtgc-vmbd-01:datastore1",
      "remote_password": "{{ user `vm_pass` }}",
      "vm_name": "{{ user `image_name` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "vnc_port_min": 5900,
      "vnc_port_max": 6000,
      "ssh_username": "{{user `packer_username`}}",
      "ssh_password": "{{user `packer_password`}}",
      "ssh_timeout": "60m",
      "shutdown_command": "echo '{{user `packer_username`}}' | sudo -S shutdown -P now",
      "http_directory": "data/",
      "headless": false,
      "version": 8,
      "tools_upload_flavor": "linux",
      "format": "ovf",
      "boot_command": [ 
        "{{user `boot_cmd`}}",
        "hostname={{ .Name }} ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "netcfg/get_hostname={{ .Name }} ",
        "-- <enter><wait> "
      ]
      },
      {
      "type": "virtualbox-iso",
      "output_directory": "{{ user `image_name` }}",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "ssh_username": "{{user `packer_username`}}",
      "ssh_password": "{{user `packer_password`}}",
      "ssh_timeout": "60m",
      "shutdown_command": "echo '{{user `packer_username`}}' | sudo -S shutdown -P now",
      "http_directory": "data/",
      "headless": false,
      "boot_command": [ 
        "{{user `boot_cmd`}}",
        "hostname={{ .Name }} ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "netcfg/get_hostname={{ .Name }} ",
        "-- <enter><wait> "
      ]      },
      {
        "flavor": "m1.small",
        "image_name": "{{ user `image_name` }}",
        "source_image": "{{ user `openstack_imgid` }}",
        "ssh_username": "ubuntu",
        "use_floating_ip": "true",
        "floating_ip_pool": "nova",
        "type": "openstack",
        "security_groups": "{{user `openstack_sg`}}"
      },


      {
        "type":         "null",
        "ssh_host":     "127.0.0.1",
        "ssh_username": "{{ user `null_user` }}",
        "ssh_private_key_file": "{{ user `null_key` }}"
      }
  ],


  "provisioners": [
    {
      "type": "file",
      "source": "./files/",
      "destination": "/var/tmp"
    },
    {
      "type": "file",
      "source": "./scripts/irods_init.sh",
      "destination": "/var/tmp/irods_init.sh"
    },

    {
      "scripts": [
          "scripts/update.sh",
          "scripts/sudoers.sh",
          "scripts/irods.sh",
          "scripts/minimize.sh",
	  "scripts/install_cloud-init.sh",
	  "scripts/add_version.sh"
      ],
      "type": "shell",
      "except": [ "null" ],
      "execute_command": "echo '{{user `packer_username`}}' | {{ .Vars }} sudo -S -E bash '{{ .Path }}'"
    },
    {
      "scripts": [
          "scripts/install_vmtools.sh"
      ],
      "type": "shell",
      "execute_command": "echo '{{user `packer_username`}}' | sudo -S bash '{{ .Path }}'",
      "only": ["vmware-iso"]
    },
    {
      "only": ["openstack"],
      "destination": "/tmp/stash",
      "source": "./data/",
      "type": "file"
    },
    {
      "only": [ "null" ],
      "type": "shell",
      "inline": [
        "echo {{ user `vm_pass` }}"
        ]

    }
  ]
}
